@{
    ViewData["Title"] = "SPA Quote Client";
}

@*Table to display all quotes*@
<div class="container-fluid h-100">
    <a class="btn btn-primary my-3" id="toggleFormBtn" type="button" data-bs-toggle="collapse" data-bs-target="#formContainer" aria-expanded="false" aria-controls="formContainer">Toggle Quote Form</a>
    <div class="collapse" id="formContainer">
        <h2 class="text-primary" id="quoteFormTitle">Add Quote</h2>
        <form class="quoteForm mb-3">
            <p id="quoteFormMessages"></p>
            <div class="form-group">
                <label for="quoteFormContent">Quote:</label>
                <input type="text" class="form-control" id="quoteFormContent" name="quoteContent" required/>
            </div>

            <div class="form-group">
                <label for="quoteFormAuthor">Author:</label>
                <input type="text" class="form-control" id="quoteFormAuthor" name="quoteName"/>
            </div>

            <div class="form-group mb-3">
                <label for="quoteFormTags" id="quoteFormTagLabel">Tag:</label>
                <input type="text" class="form-control" id="quoteFormTags" name="quoteFormTag" list="tagList"/>
                <datalist id="tagList"></datalist>
            </div>

            <button class="btn btn-primary" id="quoteFormSubmit">Submit</button>
            <button class="btn btn-primary" id="quoteFormReset">Clear</button>
        </form>
    </div>

    <div class="col-md-12 col-sm-12">
        <table class="table table-bordered table-striped">
            <thead>
            <tr>
                <th class="col-md-6">Quote</th>
                <th>Author</th>
                <th>Tags</th>
                <th>Likes</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody id="quoteTableRows">

            </tbody>
        </table>
    </div>
</div>